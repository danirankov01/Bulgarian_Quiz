<HomePage>:
    name:'home'
    canvas.before:
        Rectangle:
            size:self.size
            source: 'logo.png'
        
    
    Button:
        on_release:app.root.current = 'q1'
        size_hint:0.65,0.3
        pos_hint: {"x":0.15,"y":0.15,}
        background_normal:'play.jpg'
        background_down:'play.jpg'
                  
<Question1>:
    name:'q1'
    BoxLayout:
        orientation: 'vertical'

        Label:
            text:'1. Кои са трите национални парка в България?'
            text_size: self.width, None
            size_hint: 0.8, None
            pos_hint: {"x":0.10,"y":0.10,}
            height: self.texture_size[1]
            font_size:self.width/10
            color: 0,0,0
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
            padding: [50,0]
            margin: [20, 0]
            
        Button:
            background_color: 0,255,255
            text: 'А. Рила'
            text_size: self.width, None
            font_size:self.width/20
            color: (255,255,255)
            on_release:self.background_color = (0,255,0)
            on_release:self.color = (0,0,0)
        Button:
            background_color: 0,255,255
            text: 'Б. Пирин'
            text_size: self.width, None
            font_size:self.width/20
            color: (255,255,255)
            on_release:self.background_color = (0,255,0)
        Button:
            background_color: 0,255,255
            text: 'В. Витоша'
            text_size: self.width, None
            font_size:self.width/20
            color: (255,255,255)
            on_release:self.background_color = (255,0,0)
        Button:
            background_color: 0,255,255
            text: 'Г. Централен Балкан'
            text_size: self.width, None
            font_size:self.width/20
            color: (255,255,255)
            on_release:self.background_color = (0,255,0)
        AnchorLayout:
            anchor_y:'bottom'
            BoxLayout:
